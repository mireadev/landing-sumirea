.projects-list__item
  display flex
  justify-content center
  align-items center
  background #000000
  background-size cover !important
  padding 15px
  color #ffffff
  text-align center
  border 1px solid #7c7c7c
  border-radius 50%
  margin-bottom 15px
  box-shadow 0 0 25px 0 rgba(0, 0, 0, 1)

.projects-list__item
  width 23vh
  height 23vh

  .projects-list__item--icon
    font-size 30px

  .projects-list__item--title
    font-size 16px