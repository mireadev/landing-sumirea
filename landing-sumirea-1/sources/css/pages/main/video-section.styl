.video-logo__wrap
  width 100%
  height 100%

.video-logo
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -70%)
  z-index 300
  color white
  text-align center
  text-transform uppercase
  user-select none

.video-logo img
  display inline-block
  width 40vh
  height 40vh
  user-drag none

.video-logo canvas
  position absolute
  width 100%
  height 100%

.scroll-help__icon
  font-size 200%
  font-weight 600